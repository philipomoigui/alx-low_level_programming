#include "holberton.h"
/**
 * _memset - function that fills memory with a constant byte
 * @s: string to be checked
 * @b: constant byte to be filled
 * @n: the first bytes in memory to be filled.
 * Return: s
 */

char *_strchr(char *s, char c)
{

unsigned int i;
for (i = 0; s[i] != '/0'; i++)
{
if (s[i] == c)
return (s[i]);

}
return (0);
}
